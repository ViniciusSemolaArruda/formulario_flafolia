generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Candidate {
  id                     String   @id @default(cuid())
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  fullName               String
  artisticName           String?
  birthDate              DateTime
  phoneWhatsapp          String
  email                  String
  city                   String
  neighborhood           String?
  instagram              String?

  hasParticipatedBefore  Boolean
  participatedDetails    String?

  sambaTime              SambaTime
  hasLiveBatteryExp      Boolean

  availableNightsWeekend Boolean
  awarePresenceRequired  Boolean

  photoFaceUrl           String
  photoBodyUrl           String

  isOver18               Boolean
  availableAllRehearsals Boolean
  awareRepresentBlock    Boolean
  acceptedRegulation     Boolean
  authorizedImageUse     Boolean

  @@index([email])
}

enum SambaTime {
  LESS_THAN_1_YEAR
  FROM_1_TO_3_YEARS
  MORE_THAN_3_YEARS
}
